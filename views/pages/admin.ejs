<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="css/admin.css" />
	<link rel="stylesheet" href="css/adminTag.css" />
	<link rel="stylesheet" href="css/popup.css" />
	<link rel="stylesheet" href="css/adminUser.css" />
	<link rel="stylesheet" href="css/notification.css" />
	<link rel="preconnect" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	<link
		href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap"
		rel="stylesheet" />
	<title>Programming diary</title>
</head>

<body>
	<script src="js/AdminFunctions.js"></script>
	<script src="js/AdminUser.js"></script>
	<script src="js/AdminTag.js"></script>
	<%- include("../partials/adminPopup.ejs") %>
		<%- include("../partials/adminPopupTag.ejs") %>
			<%- include("../partials/delNotifi.ejs") %>
				<div class="admin">
					<div class="admin-header">
						<div class="admin-hamburger">
							<img src="img/hamburger.png" alt="hamburger">
							<div class="admin-hamburger-menu">
								<a style="cursor: pointer;" href="/">Dashboard</a>
								<span style="cursor: pointer;">Logout</span>
							</div>
						</div>
						<div class="admin-top">
							<div class="admin-heading">
								<div class="admin-text">
									<span id="Users" style="color: #6F6C90; cursor: pointer;" onclick="toUsers()">Users</span>
									<span id="Tags" style="color: #287FFF; cursor: pointer;" onclick="toTags()">Tags</span>
								</div>
							</div>
							<div class="admin-add">
								<button class="admin-addBtn" onclick="handleAddButton();">
									<img src="img/Plus.png" alt="plus">
									<span class="buttonText">Add</span>
								</button>
							</div>
						</div>
					</div>
					<div class="admin-content">
						<div class="users" style="display: none">
							<% users.forEach((user)=> {%>
								<%- include('../partials/adminUser.ejs', {user: user}) %>
									<% }) %>
						</div>
						<div class="tags" style="display: flex">
							<%tags.forEach((tag)=> {%>
								<%- include('../partials/adminTag.ejs', {tag: tag}) %>
									<%})%>
						</div>
					</div>
				</div>
</body>

</html>