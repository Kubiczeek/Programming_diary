<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="css/main.css" />
    <link rel="stylesheet" href="css/card.css" />
    <link rel="stylesheet" href="css/tag.css" />
    <link rel="stylesheet" href="css/popup.css" />
    <link rel="stylesheet" href="css/settings.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,400;0,600;0,700;1,400&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <script src="js/MenuFunctions.js"></script>
    <script src="js/CardFunctions.js"></script>
    <%- include("../partials/popup") %> <%- include("../partials/settings") %>
    <div class="main" id="main">
      <div class="topSide">
        <button
          class="addRecord"
          onclick='showPopUp("Add Record", "/addRecord")'
        >
          <img src="img/Plus.png" alt="Plus" />
        </button>
        <button class="buttonWithImageSmall" onclick="openSettings()">
          <img class="cog" src="img/Cog.png" alt="Settings" />
        </button>
        <button class="Account" onclick='showPopUp("Account", "/addRecord")'>
          <img src="img/User.png" alt="User" />
        </button>
      </div>
      <div class="botSide">
        <%- include('../partials/filterAndSort') %>
        <div class="records">
          <% data.forEach((card)=> {%> <%- include('../partials/card', {card:
          card, categories: categories}) %> <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
